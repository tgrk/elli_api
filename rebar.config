{erl_opts, [
    {parse_transform, lager_transform},

    warn_unused_vars,
    warn_export_all,
    warn_shadow_vars,
    warn_unused_import,
    warn_unused_function,
    warn_bif_clash,
    warn_unused_record,
    warn_deprecated_function,
    warn_obsolete_guard,
    strict_validation,
    warn_export_vars,
    warn_exported_vars
]}.

{deps, [
        {lager,            "3.2.4"},
        {jiffy,            "0.14.11"},
        {uuid,             "1.6.0", {pkg, uuid_erl}},
        {nested,           {git, "https://github.com/odo/nested", {tag, "1.1.3"}}},

        {elli,             "2.0.1"},
        {elli_cookie,      "0.2.9"},

        %% For testing
        {meck,             "0.8.7"},
        {covertool,        "1.0.0", {pkg, rebar_covertool}},
        {eunit_formatters, "0.3.1"}
]}.

{overrides,
 [{override, jiffy, [
     {plugins, [pc]},
     {artifacts, ["priv/jiffy.so"]},
     {provider_hooks, [
         {post, [
                  {compile, {pc, compile}}
                , {clean, {pc, clean}}
                ]
          }]
      }
  ]}
]}.

{xref_checks, [undefined_function_calls]}.

{profiles, [
    {dev, [
        {deps,     [meck, eunit_formatters]},
        {erl_opts, [debug_info]}
    ]},
    {test, [
        {deps,     [meck, eunit_formatters]},
        {erl_opts, [debug_info]}
    ]}
]}.
